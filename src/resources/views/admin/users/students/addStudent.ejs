<h1>Thêm tài khoản học viên</h1>
<% if (message?.length) { %>
<div class="alert alert-danger"><%= message %></div>
<% } %>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Tên</label>
    <input type="text" name="name" placeholder="Tên..." class="form-control" />
    <span class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      placeholder="Email..."
      class="form-control"
    />
    <span class="text-danger"></span>
  </div>
  <div class="mb-3">
    <label for="">Mật khẩu</label>
    <input
      type="password"
      name="password"
      placeholder="Mật khẩu..."
      class="form-control"
    />
    <span class="text-danger"></span>
  </div>

  <button class="btn btn-success">Lưu</button>
  <a href="/admin" class="btn btn-danger">Hủy</a>
</form>
